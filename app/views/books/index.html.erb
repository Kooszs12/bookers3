<main>
  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_image(100, 100) %>
        <tabel class =tabel>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </tabel>
        <div class = "row">
          <%= link_to edit_user_path(@user) do %>
            <i class="fa-solid fa-user-gear">
            ::before
            </i>
          <% end %>
        </div>

        <h2 class = "mt-3">New book</h2>
        <%= form_with model: @book_new do |f| %>
        <div class = "form-group">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class = "form-group">
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
        <div class = "form-group">
          <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </div>

      <div class = "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <tabel calss = "tabel tabel-hover tabel-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opition</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @books.each do |book| %>
                <td><%= image_tag book.user.get_image(100, 100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </tabel>
      </div>
    </div>
  </div>
</main>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/cb1a1fa502.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav>
      <div>
        <a>
          <span>Bookers</span>
        </a>
      <div>
          <ul>
            <% if user_signed_in? %>
              <li>
                <i class="fas fa-home">
                  <%= link_to "Home", users_path %></i>
              </li>
              <li>
                <i class="fa-solid fa-users">
                  <%= link_to "Users", users_path %></i>
              </li>
              <li>
                <i class="fa-solid fa-book-open">
                  <%= link_to "Books", books_path %></i>
              </li>
              <li>
                <i class="fa-solid fa-right-from-bracket">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </i>
              </li>
            <% else %>
              <li>
                <i class="fas fa-home">
                  <%= link_to "Home", about_path %></i>
              </li>
              <li>
                <i class="fas fa-link">
                  <%= link_to "Abou", about_path %></i>
              </li>
              <li>
                <i class="fas fa-user-plus">
                  <%= link_to "Sign up", new_user_registration_path %></i>
              </li>
              <li>
                <i class="fas fa-sign-in-alt">
                  <%= link_to "Log in", new_user_session_path %></i>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

    <%= yield %>
    
  </body>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>

</html>

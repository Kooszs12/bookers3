<main>
  <p id = "notice"></p>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <div>
          <% if @user.errors.any? %>
            <h2><%= @user.errors.count %>error prohibited this from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <%= form_with model: @user do |f| %>
          <div class = "form-group">
            <%= f.label :Name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class = "form-group">
            <%= f.label :image %>
            <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
          </div>
          <div class = "form-group">
            <%= f.label :Introduction %>
            <%= f.text_area :introduction, class: "form-control"  %>
          </div>
          <div class = "form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
          </div>
        <% end %>
       </div>
    </div>
  </div>
</main>
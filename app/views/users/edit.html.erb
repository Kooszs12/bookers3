<main>
  <h2>User info</h2>

  <%= form_with model: @user do |f| %>
    <%= f.label :Name %>
    <%= f.text_field :name %>
    <%= f.label :image %>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.label :Introduction %>
    <%= f.text_area :introduction %>
    <%= f.submit 'Update User' %>
  <% end %>
  
</main>